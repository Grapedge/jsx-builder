{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ESNext"],
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "allowJs": true,
    "checkJs": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "declarationDir": "."
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}
